<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CinemaTicketBooking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/_layout.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CinemaTicketBooking.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/movies.css">
    <link rel="stylesheet" href="/css/MovieDetails.css">
    <link rel="stylesheet" href="~/css/itemInfo.css">
    <link rel="stylesheet" href="~/css/ModifyCinemas.css">
    <link rel="stylesheet" href="~/css/UpdateCinemaForm.css">
    <script src="https://kit.fontawesome.com/6651f21cb6.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CinemaTicketBooking</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Movies" asp-action="Index" asp-route-pageno="1"><i class="fa-solid fa-film"></i> Movies</a>
                        </li>
                    </ul>
                </div>
                <form class="search-form">
                    <input type="search" placeholder="Search for a movie..." class="search"/>
                    <button style="" class="search-button"><i class="fa-solid fa-magnifying-glass"></i></button>
                </form>
                <div class="user-navs">
                    <a class="search-button"><i class="fa-solid fa-right-to-bracket"></i> Login</a>
                    <a class="movie-nav show-details"><i class="fa-solid fa-user-plus"></i> Register</a>
                </div>
            </div>
        </nav>
    </header>
            @RenderBody()

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CinemaTicketBooking - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        const actorImages = document.querySelectorAll(".item-info img");
        for (const image of actorImages) {
            const width = image.offsetWidth;
            console.log(width);
            image.style.height = width + "px";
            console.log(image.style.height);
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
